<div class="m-3">
    <div class="row mt-3">
        <div class="col-md-3">
            <img src="{{item.image}}" class="img-fluid">
        </div>
        <div class="col-md-6 text-white">
            <h3>{{item.name}}</h3>
            <h4>{{item.author}}</h4>
            <h5 class="ml-2 text-success">â‚¹ {{item.price}}</h5>
            <h5>{{item.description}}</h5>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-header">
                    <p class="text-muted">contact seller</p>
                </div>
                <div class="card-body">
                    <img src="{{item.user.profile}}" class="img-fluid rounded-circle" width='70'>
                    <hr>
                    <h5>{{item.user.name}}</h5>
                    <h5>{{item.user.contact}}</h5>
                    <p>{{item.user.address}}</p>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <form action="/sports/comments/{{item.id}}" method="post">
                    <div class="form-groupt">
                        <label for="comments" class="h5">Comment</label>
                        <textarea name="comment" id="comments" class="form-control" placeholder="Type Your comments here"></textarea>
                    </div>
                    <button type="submit" class="mt-2 btn btn-success">Submit</button>
                </form>
            </div>
            <div class="card-body">
                <div class="container">
                    {{#each item.comments}}
                    <div class="card mt-2">
                        <div class="card-header bg-info">
                            <img src="{{commentUser.profile}}" class="img-fluid rounded-circle d-inline mx-2" width="70">
                            <p class="d-inline">{{commentUser.name}}</p>
                        </div>
                        <h4 class="p-4">{{commentBody}}</h4>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

</div>