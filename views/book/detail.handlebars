<div class="m-4">
    <div class="row mt-5">
        <div class="col-md-3">
            <img src="{{item.image}}" class="img-fluid">
            {{#if (Icon user.id item.user.id)}}
            <div class="mt-2 ml-4">
                <a class="btn btn-info" href="/books/edit/{{item.id}}"><i class="fa fa-pen"
                        aria-hidden="true"></i>&emsp;Edit</a>
                <form action="/books/{{item.id}}?_method=DELETE" method="post" class="d-inline">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i>&emsp;Delete</button>
                </form>
            </div>
            {{/if}}
        </div>
        <div class="col-md-6 text-white">
            <h3>{{item.name}}</h3>
            <h5>{{item.author}}</h5>
            <h4>{{item.company}}</h4>
            <h5 class="ml-2 text-success">â‚¹ {{item.price}}</h5>
            <h5>{{{item.description}}}</h5>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-header">
                    <p class="text-muted">contact seller</p>
                </div>
                <div class="card-body">
                    <a href="/{{item.user.id}}/profile">
                        <img src="{{item.user.profile}}" class="img-fluid rounded-circle" width='70'>
                    </a>
                    <hr>
                    <h5>{{item.user.name}}</h5>
                    <h5>{{item.user.contact}}</h5>
                    <p>{{item.user.address}}</p>
                    <a class="btn btn-info" href="/{{item.user.id}}/profile">More info</a>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div>
        <div class="card">
            <div class="card-header">
                <form action="/books/comments/{{item.id}}" method="post">
                    <div class="form-groupt">
                        <label for="comments" class="h5">Comment</label>
                        <textarea name="comment" id="comments" class="form-control"
                            placeholder="Type Your comments here" required></textarea>
                    </div>
                    <button type="submit" class="mt-2 btn btn-success">Submit</button>
                </form>
            </div>
            <div class="card-text">
                <div class="container">
                    {{#each item.comments}}
                    <div class="card mt-2">
                        <div class="card-header bg-info">
                            <a href="/{{commentUser.id}}/profile">
                                <img src="{{commentUser.profile}}" class="img-fluid rounded-circle d-inline mx-2"
                                    width="70">
                            </a>
                            <p class="d-inline">{{commentUser.name}}</p>
                            {{#if (Icon ../user.id commentUser.id)}}
                            <div class="d-inline float-right">
                                <a href="/books/comments/{{../item.id}}/{{id}}" class="btn btn-danger"><i
                                        class="fa fa-trash" aria-hidden="true"></i></a>
                            </div>
                            {{/if}}
                        </div>
                        <h4 class="p-2">{{commentBody}}</h4>
                        <p class="p-2 text-muted">{{formatDate commentDate 'MMMM Do YYYY'}}</p>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

</div>