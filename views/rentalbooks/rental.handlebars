<div class="m-md-5 m-2">
    <div class="row">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 m-auto">
                    <label for="section" class="h2 text-success">Sort</label>
                    <form action="/rental/search" method="post" class="form-row justify-content-center">
                        <div class="form-group mr-2">
                            <select class="custom-select mb-2 mr-2" name="section" class="fieldRequired" id="section">
                                {{#select value}}
                                <option selected value="x" disabled>Choose Branch</option>
                                <option value="C.S.E">C.S.E</option>
                                <option value="I.S.E">I.S.E</option>
                                <option value="Mech">Mech</option>
                                <option value="Civil">Civil</option>
                                <option value="E.C.E">E.C.E</option>
                                <option value="E.E.E">E.E.E</option>
                                <option value="C.T.M">C.T.M</option>
                                <option value="Marine">Marine</option>
                                <option value="others">others</option>
                                {{/select}}
                            </select>
                        </div>
                        <div class="form-group">
                            <input class="form-control mb-2 mr-2" type="text" name="location"
                                placeholder="search location" value="{{location}}">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success text-center mx-2">&emsp;SORT&emsp;</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        {{#each books}}
        <div class="col-md-4 col-lg-3 mt-4">
            <div id="book-card" class="card">
                {{#if (Icon ../user.id user)}}
                <div class="card-header">
                    <div class="d-inline float-right">
                        <form action="/rental/{{id}}?_method=DELETE" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i></button>
                        </form>
                    </div>
                    <div class="d-inline float-left">
                        <a href="/rental/edit/{{id}}" class="btn btn-info"><i class="fa fa-pen"></i></a>
                    </div>
                </div>
                {{/if}}
                <div id="book-image" class="card-text">
                    <a href="/rental/{{id}}">
                        <img src="{{image}}" class="img-fluid book-img">
                    </a>
                </div>
                <div class="card-body text-center text-dark">
                    <p class="h4 text-danger">{{name}}</p>
                    <p class="h5">{{author}}</p>
                    <p class="text-success">â‚¹ {{price}}</p>
                    <a href="/rental/{{id}}" class="btn btn-outline-success">More info</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-10 m-auto">
            <h4 class="text-success text-center mt-4">NO Books Founds (- , -)</h4>
        </div>
        {{/each}}
    </div>
</div>