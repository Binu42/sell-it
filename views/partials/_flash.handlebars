{{#if success_msg}}
<div class="container">
    <div class="alert mt-4 alert-success alert-dismissible text-center">{{success_msg}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
</div>
{{/if}}
{{#if error_msg}}
<div class="container">
    <div class="alert mt-4 alert-danger alert-dismissible text-center">{{error_msg}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
</div>
{{/if}}