<div class="container mt-5">
    <div class="row">
        <div class="offset-2"></div>
        <div class="col-md-4">
            <a href="{{item.profile}}" class="item-image">
                <img src="{{item.profile}}" class="img-fluid rounded-circle">
            </a>

        </div>
        <div class="col-md-6 mt-md-5 mt-2 text-white">
            <h3>{{item.name}}</h3>
            <h4>{{item.email}}</h4>
            <h4 class="text-info"><i class="fa fa-map-marker-alt" aria-hidden="true"></i>&emsp;{{item.address}}</h4>
            <h4><i class="fas fa-phone-square"></i>&emsp;{{item.contact}}</h4>
            {{#if (Icon item.id user.id)}}
            <a href="/profile/edit/{{item.id}}" class="btn btn-warning"><i class="fa fa-pencil"
                    aria-hidden="true"></i>Edit</a>
            {{/if}}
        </div>
    </div>
</div>