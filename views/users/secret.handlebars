<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form action="/forgot" method="post">
                <div class="card">
                    <div class="card-header">
                        <h4 class="text-center">Account Recovery</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group mb-2">
                            <label for="email">E-mail</label>
                            <input type="text" id="email" class="form-control" name="email"
                                placeholder="Enter Your account Email Id" required>
                        </div>
                        <div class="form-group mb-2">
                            <label for="secret">Secret</label>
                            <input type="text" id="secret" class="form-control" name="secret"
                                placeholder="Enter Your account Secret Key" required autocomplete="off">
                        </div>
                        <div class="row">
                            <div class="col-md-6 offset-md-3">
                                <button type="submit" class="btn btn-success btn-block">submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>