<div class="m-4">
    <div class="mt-5">
        <h4 class="text-center text-white display-4 text-uppercase text-success"><u>Book Items</u></h4>
    </div>
    <div class="row">
        {{#each books}}
        <div class="col-md-4 col-lg-3 mt-4">
            <div class="card">
                {{#if (Icon ../user.id user)}}
                <div class="card-header">
                    <div class="d-inline float-right">
                        <form action="/books/{{id}}?_method=DELETE" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i></button>
                        </form>
                    </div>
                    <div class="d-inline float-left">
                        <a href="/books/edit/{{id}}" class="btn btn-info"><i class="fa fa-pen"></i></a>
                    </div>
                </div>
                {{/if}}
                <div class="card-text text-center text-dark">
                    <a href="/books/{{id}}">
                        <img src="{{image}}" width="300" class="img-fluid book-img">
                    </a>
                    <p class="h4 text-danger">{{name}}</p>
                    <p class="h5">{{author}}</p>
                    <p class="text-success">₹ {{price}}</p>
                    <a href="/books/{{id}}" class="btn btn-outline-success">More info</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-10 m-auto">
            <h4 class="text-info text-center mt-4">NO Books Found (- , -)</h4>
        </div>
        {{/each}}
    </div>
    <hr>
    <div class="my-4">
        <h4 class="text-center text-white display-4 text-uppercase text-success"><u>Sport Items</u></h4>
    </div>
    <div class="row">
        {{#each sports}}
        <div class="col-md-4 col-lg-3 mt-4">
            <div class="card">
                {{#if (Icon ../user.id user)}}
                <div class="card-header">
                    <div class="d-inline float-right">
                        <form action="/sports/{{id}}?_method=DELETE" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i></button>
                        </form>
                    </div>
                    <div class="d-inline float-left">
                        <a href="/sports/edit/{{id}}" class="btn btn-info"><i class="fa fa-pen"></i></a>
                    </div>
                </div>
                {{/if}}
                <div class="card-body text-center text-dark">
                    <a href="/sports/{{id}}">
                        <img src="{{image}}" width="300" class="img-fluid book-img">
                    </a>
                    <p class="h4 text-danger">{{name}}</p>
                    <p class="h5">{{company}}</p>
                    <p class="text-success">₹ {{price}}</p>
                    <a href="/sports/{{id}}" class="btn btn-outline-success">More info</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-10 m-auto">
            <h4 class="text-info text-center mt-4">NO Sport Items Founds (- , -)</h4>
        </div>
        {{/each}}
    </div>
</div>