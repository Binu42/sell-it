<div class="container mt-5">
    <div class="row">
        <div class="offset-2"></div>
        <div class="col-md-4">
            <img src="{{user.profile}}" class="img-fluid rounded-circle">
        </div>
        <div class="col-md-6 mt-md-5 mt-2 text-white">
            <h3>{{user.name}}</h3>
            <h4>{{user.email}}</h4>
            <h4 class="text-info"><i class="fa fa-map-marker-alt" aria-hidden="true"></i>&emsp;{{user.address}}</h4>
            <h4><i class="fas fa-phone-square"></i>&emsp;{{user.contact}}</h4>
        </div>
    </div>
</div>