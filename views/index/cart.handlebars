<div class="container">
    <div class="mt-3">
        <h4 class="text-center text-white"><u>Book Items</u></h4>
    </div>
    <div class="row">
        {{#each books}}
        <div class="col-md-4 col-lg-3 mt-4">
            <div class="card">
                <div>
                    <a href="/books/{{id}}">
                        <img src="{{image}}" width="300" class="img-fluid book-img">
                    </a>
                </div>
                <div class="card-body text-center text-dark">
                    <p class="h4 text-danger">{{name}}</p>
                    <p class="h5">{{author}}</p>
                    <p class="text-success">₹ {{price}}</p>
                    <a href="/books/{{id}}" class="btn btn-outline-success">More info</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <hr>
    <div class="my-4">
        <h4 class="text-center text-white"><u>Sport Items</u></h4>
    </div>
    <div class="row">
        {{#each sports}}
        <div class="col-md-4 col-lg-3 mt-4">
            <div class="card">
                <div>
                    <a href="/sports/{{id}}">
                        <img src="{{image}}" width="300" class="img-fluid book-img">
                    </a>
                </div>
                <div class="card-body text-center text-dark">
                    <p class="h4 text-danger">{{name}}</p>
                    <p class="h5">{{company}}</p>
                    <p class="text-success">₹ {{price}}</p>
                    <a href="/sports/{{id}}" class="btn btn-outline-success">More info</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>