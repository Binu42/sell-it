<div class="m-4">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-8 m-auto">
            <form class="form-inline" action="/sports/search" method="post">
                <input class="form-control mr-sm-2" type="search" name='search' placeholder="Search by Item name">
                <button class="btn btn-outline-success btn-block-sm my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
        <hr>
    </div>
    <div class="row">
        {{#each sports}}
        <div class="col-md-4 col-lg-3 mt-4">
            <div class="card">
                {{#if (Icon ../user.id user)}}
                <div class="card-header">
                    <div class="d-inline float-right">
                        <a href="/sports/delete/{{id}}" class="btn btn-danger"><i class="fa fa-trash"
                                aria-hidden="true"></i></a>
                    </div>
                    <div class="d-inline float-left">
                        <a href="/sports/edit/{{id}}" class="btn btn-info"><i class="fa fa-pen"
                                aria-hidden="true"></i></a>
                    </div>
                </div>
                {{/if}}
                <div class="card-text text-center text-dark">
                    <a href="/sports/{{id}}">
                        <img src="{{image}}" width="300" class="img-fluid book-img">
                    </a>
                    <p class="h4 text-danger">{{name}}</p>
                    <p class="h5">{{company}}</p>
                    <p class="text-success">â‚¹ {{price}}</p>
                    <a href="/sports/{{id}}" class="btn btn-outline-success">More info</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>